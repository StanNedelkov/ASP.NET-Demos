@model IEnumerable<ProductsViewModel>
@{
    ViewBag.Title = "All products";
}
<div class="card" style="width: 18rem; margin:auto">
    <div class="card-header">@ViewBag.Title</div>
    <ul class="list-group list-group-flush">
        @foreach (var product in Model)
        {
            <li class="list-group-item">
                <a asp-action="ById" asp-route-id="@product.Id" class="link-dark">Num.@product.Id: @product.Name - @product.Price lv.</a>
            </li>
        }
    </ul>
</div>
<div class="form-group" style="width: 18rem; margin:auto">
    <a asp-action="AllAsText">
        <input type="submit" value="Text" class="btn btn-light" />
    </a>
    <a> </a>
        <a asp-action="AllAsTextFile">
            <input type="submit" value="Download .txt" class="btn btn-light" />
        </a>
    <a> </a>
    <a asp-action="AllAsJson">
        <input type="submit" value="JSON" class="btn btn-light" />
    </a>
</div>

