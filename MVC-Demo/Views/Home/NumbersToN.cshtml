@{
    ViewBag.Title = "Numbers 1..." + ViewBag.Count;
}
<h2>@ViewBag.Title</h2>
<ul>
    @for (int i = 1; i <= ViewBag.Count; i++)
    {
        <li>@i</li>
    }
</ul>

<form method="post">
    <h4>@ViewBag.Message</h4>
    <input name="count" value="@ViewBag.Count"/>
    <button type="submit">Submit</button>
</form>