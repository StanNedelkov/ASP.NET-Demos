@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">
        Task Board: A Board for Your Tasks
    </h1>
</div>

<hr />

<section class="home-page">
    @if (this.User.Identity.IsAuthenticated == false)
    {
        <h1 class="text-center">Welcome!</h1>
    }
    else
    {
        <h1 class="text-center">Welcome, <l style="color:darkgoldenrod">@this.User.Identity.Name</l>!</h1>
        <hr class="hr-2 bg-secondary" />
        <h4 class="mt-4 text-center">TaskBoard is here for all your tasks.</h4>
        <br />
        <div class="text-center">
            <h6 class="mt-4 text-center">
                Tasks: <b>@Model.AllTasksCount</b></h6>
            
        <dl>
            @foreach (var board in Model.BoardsWithTaskCount)
            {
                <dd>
                        <span class="boardSpan">@board.BoardName: <b>@board.TasksCount</b></span>
                </dd>
            }
        </dl>
        @if (Model.UserTasksCount > -1)
        {
            <h5>You have: <l>@Model.UserTasksCount</l> tasks</h5>
        }
        </div>
    }
   
</section>

